# Staging Environment Variables

# Database
DATABASE_URL=postgresql://xplore_staging:staging_password@postgres:5432/xplore_staging
POSTGRES_USER=xplore_staging
POSTGRES_PASSWORD=staging_password
POSTGRES_DB=xplore_staging

# Redis
REDIS_URL=redis://:staging_redis_password@redis:6379
REDIS_PASSWORD=staging_redis_password

# Authentication
JWT_SECRET=staging-jwt-secret-change-this-in-production
JWT_REFRESH_SECRET=staging-jwt-refresh-secret-change-this

# External APIs
OPENWEATHER_API_KEY=your-staging-openweather-key
ACCUWEATHER_API_KEY=your-staging-accuweather-key
MAPBOX_ACCESS_TOKEN=your-staging-mapbox-token
GOOGLE_PLACES_API_KEY=your-staging-google-places-key

# File Storage
CLOUDFLARE_R2_BUCKET=xplore-staging
CLOUDFLARE_R2_ACCESS_KEY=your-staging-r2-access-key
CLOUDFLARE_R2_SECRET_KEY=your-staging-r2-secret-key

# Email
SENDGRID_API_KEY=your-staging-sendgrid-key
FROM_EMAIL=noreply@staging.xplore.app

# Monitoring
SENTRY_DSN=your-staging-sentry-dsn
MIXPANEL_TOKEN=your-staging-mixpanel-token

# Frontend URLs
NEXT_PUBLIC_API_URL=https://staging-api.xplore.app
NEXT_PUBLIC_MAPBOX_TOKEN=your-staging-mapbox-public-token
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your-staging-google-places-public-key

# Google Cloud
GCP_PROJECT_ID=xplore-staging
GCP_SA_KEY=base64-encoded-service-account-key

# Vercel
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# GitHub Secrets (for CI/CD)
GITHUB_TOKEN=your-github-token
SNYK_TOKEN=your-snyk-token