# Production Environment Variables

# Database
DATABASE_URL=postgresql://xplore_prod:secure_production_password@postgres:5432/xplore_production
POSTGRES_USER=xplore_prod
POSTGRES_PASSWORD=secure_production_password
POSTGRES_DB=xplore_production

# Redis
REDIS_URL=redis://:secure_redis_production_password@redis:6379
REDIS_PASSWORD=secure_redis_production_password

# Authentication
JWT_SECRET=your-super-secure-production-jwt-secret
JWT_REFRESH_SECRET=your-super-secure-production-refresh-secret

# External APIs
OPENWEATHER_API_KEY=your-production-openweather-key
ACCUWEATHER_API_KEY=your-production-accuweather-key
MAPBOX_ACCESS_TOKEN=your-production-mapbox-token
GOOGLE_PLACES_API_KEY=your-production-google-places-key

# File Storage
CLOUDFLARE_R2_BUCKET=xplore-production
CLOUDFLARE_R2_ACCESS_KEY=your-production-r2-access-key
CLOUDFLARE_R2_SECRET_KEY=your-production-r2-secret-key

# Email
SENDGRID_API_KEY=your-production-sendgrid-key
FROM_EMAIL=noreply@xplore.app

# Monitoring
SENTRY_DSN=your-production-sentry-dsn
MIXPANEL_TOKEN=your-production-mixpanel-token

# Frontend URLs
NEXT_PUBLIC_API_URL=https://api.xplore.app
NEXT_PUBLIC_MAPBOX_TOKEN=your-production-mapbox-public-token
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your-production-google-places-public-key

# Google Cloud
GCP_PROJECT_ID=xplore-production
GCP_SA_KEY=base64-encoded-service-account-key

# Vercel
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# Backup Configuration
BACKUP_S3_BUCKET=xplore-backups

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Production URLs
PRODUCTION_API_URL=https://api.xplore.app
STAGING_API_URL=https://staging-api.xplore.app